{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "allowJs": false,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "lib": [
            "ESNext"
        ],
        "paths": {
            "@shared/*": [
                "./*"
            ]
        },
    },
    "include": [
        "**/*.ts",
    ]
}