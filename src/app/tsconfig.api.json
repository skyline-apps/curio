{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@app/*": [
        "./*"
      ],
    },
    "types": [
      "@cloudflare/workers-types/2023-07-01"
    ]
  },
  "include": [
    "api/**/*.ts",
    "api/**/*.mts",
  ]
}